<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.IntroductionActivity">
  <RelativeLayout
      android:id="@+id/appbarlayout"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:background="@color/colorPrimaryDark"
      android:elevation="4dp"
      android:minHeight="?attr/actionBarSize">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/mehrnastailqwebregular"
        android:text="تعارف"
        android:textColor="#ffff"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/img_home"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toLeftOf="@+id/img_search"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:src="@drawable/home" />

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/img_menu"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/search_ic"
        android:alpha="0.5"/>

    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/side_menu" />

  </RelativeLayout>


    <com.otaliastudios.zoom.ZoomLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_25dp"
        android:layout_marginRight="@dimen/dimen_25dp"
        app:minZoom="1.0"
        app:minZoomType="zoom"
        app:maxZoom="2.5"
        app:maxZoomType="zoom"
        app:animationDuration="280"
        android:layout_below="@+id/appbarlayout">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center_horizontal"
          android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linaer_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="تعارف"
              android:textColor="#454545"
              android:textSize="30dp"
              android:textAlignment="center"
              android:fontFamily="@font/mehrnastailqwebregular"
              android:padding="5dp"
              android:textStyle="bold"
              android:textIsSelectable="true"/>

          <androidx.cardview.widget.CardView
              android:id="@+id/card_imageview"
              android:layout_width="150dp"
              android:layout_height="200dp"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/dimen_15dp"
              android:layout_marginRight="@dimen/dimen_15dp"
              android:layout_marginTop="@dimen/dimen_15dp"
              android:layout_marginBottom="@dimen/dimen_25dp"
              app:cardBackgroundColor="@color/gray">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/zahmad"
                android:layout_marginLeft="@dimen/dimen_3dp"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:layout_marginRight="@dimen/dimen_3dp"/>
          </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_txt_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/text_color"
              android:layout_marginBottom="@dimen/dimen_3dp"
              android:textSize="@dimen/dimen_18dp"
              android:fontFamily="@font/mehrnastailqwebregular"
              android:text="قلمی نام:  ظہیرؔ احمد"
              android:textIsSelectable="true"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/text_color"
              android:layout_marginBottom="@dimen/dimen_3dp"
              android:textSize="@dimen/dimen_18dp"
              android:fontFamily="@font/mehrnastailqwebregular"
              android:text="اصل نام:  ظہیر الدین شیخ"
              android:textIsSelectable="true"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/text_color"
              android:layout_marginBottom="@dimen/dimen_3dp"
              android:textSize="@dimen/dimen_18dp"
              android:fontFamily="@font/mehrnastailqwebregular"
              android:text="تاریخ پیدائش: ۱۸ جنوری ۱۹۶۲ء۔ حیدرآباد   سندھ  (پاکستان)"
              android:textIsSelectable="true"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/text_color"
              android:layout_marginBottom="@dimen/dimen_3dp"
              android:textSize="@dimen/dimen_18dp"
              android:fontFamily="@font/mehrnastailqwebregular"
              android:text="ابتدائی تعلیم: نورمحمد ہائی اسکول اور گورنمنٹ سائنس کالج کالیموری ۔ حیدرآباد"
              android:textIsSelectable="true"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/text_color"
              android:layout_marginBottom="@dimen/dimen_3dp"
              android:textSize="@dimen/dimen_18dp"
              android:fontFamily="@font/mehrnastailqwebregular"
              android:text="میڈیکل تعلیم :  لیاقت میڈیکل کالج ۔ جامشورو (  سندھ)"
              android:textIsSelectable="true"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/text_color"
              android:layout_marginBottom="@dimen/dimen_3dp"
              android:textSize="@dimen/dimen_18dp"
              android:fontFamily="@font/mehrnastailqwebregular"
              android:text="اعلیٰ طبی تعلیم  :  ریاستہائے متحدہ امریکا"
              android:textIsSelectable="true"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/text_color"
              android:layout_marginBottom="@dimen/dimen_3dp"
              android:textSize="@dimen/dimen_18dp"
              android:fontFamily="@font/mehrnastailqwebregular"
              android:text="رہائش:  ریاستہائے متحدہ امریکا"
              android:textIsSelectable="true"/>

        </LinearLayout>


      </LinearLayout>

    </com.otaliastudios.zoom.ZoomLayout>


</RelativeLayout>